<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/z_margin_large"
    android:layout_marginRight="@dimen/z_margin_large"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/z_grey_shade_3" />

    <LinearLayout
        android:id="@+id/creditcardpaymentoptiontext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/z_margin_large">

        <com.application.zimplyshop.widgets.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Card"
            android:textColor="@color/z_text_color_dark"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hidethispaymentlayut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/z_margin_large"
            android:paddingRight="@dimen/z_margin_large">

            <com.application.zimplyshop.widgets.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter card No."
                android:textColor="@color/z_text_color_light" />

            <com.application.zimplyshop.widgets.CustomEdittext
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_mini"
                android:background="@drawable/edittext_selector_background"
                android:hint="Card Number"
                android:padding="@dimen/z_margin_small"
                android:textColor="@color/z_text_color_dark"
                android:textColorHint="@color/z_text_color_light" />

            <com.application.zimplyshop.widgets.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_large"
                android:text="Enter Name on the card"
                android:textColor="@color/z_text_color_light" />

            <com.application.zimplyshop.widgets.CustomEdittext
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_mini"
                android:background="@drawable/edittext_selector_background"
                android:hint="Name on card"
                android:padding="@dimen/z_margin_small"
                android:textColor="@color/z_text_color_dark"
                android:textColorHint="@color/z_text_color_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_large"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.application.zimplyshop.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Month"
                        android:textColor="@color/z_text_color_light" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/z_margin_medium"
                    android:orientation="vertical">

                    <com.application.zimplyshop.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Year"
                        android:textColor="@color/z_text_color_light" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <com.application.zimplyshop.widgets.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_large"
                android:text="Enter CVV No."
                android:textColor="@color/z_text_color_light" />

            <com.application.zimplyshop.widgets.CustomEdittext
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_mini"
                android:background="@drawable/edittext_selector_background"
                android:hint="CVV No."
                android:inputType="numberPassword"
                android:padding="@dimen/z_margin_small"
                android:textColor="@color/z_text_color_dark"
                android:textColorHint="@color/z_text_color_light"
                android:typeface="normal" />

            <com.application.zimplyshop.widgets.CustomCheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/z_margin_large"
                android:checked="true"
                android:text="Save this card for faster checkout" />
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/z_margin_large"
            android:background="@color/z_blue_color"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <com.application.zimplyshop.widgets.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/z_margin_large"
                android:text="Pay Securely"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_large"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>