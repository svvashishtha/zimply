<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/pager_bg"
              android:padding="@dimen/margin_small"
              android:layout_height="match_parent">
    <com.application.zimplyshop.widgets.CustomTextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/z_rate_btn_blue_color"
        android:text="@string/not_find_ans_text"
        android:textSize="@dimen/font_medium"/>

    <com.application.zimplyshop.widgets.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/heading_text_color"
        android:text="@string/post_question_text"
        android:textSize="@dimen/font_medium"/>
    <com.application.zimplyshop.widgets.CustomEdittext
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color1"
        android:padding="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:minLines="4"
        android:gravity="top|left"
        android:background="@drawable/white_card_rectangle"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/z_item_height_48"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/gray_btn_bg"
            android:text="CANCEL"
            android:textAllCaps="true"
            android:textSize="@dimen/font_medium"/>

        <View android:layout_width="@dimen/margin_small"
              android:layout_height="match_parent"/>


        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/submit_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/z_item_height_48"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:background="@drawable/z_rate_blue_btn_bg"
            android:textColor="@color/white"
            android:text="SUBMIT"
            android:textAllCaps="true"
            android:textSize="@dimen/font_medium"/>
    </LinearLayout>

</LinearLayout>