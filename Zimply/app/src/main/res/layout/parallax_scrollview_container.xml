<?xml version="1.0" encoding="utf-8"?>
<com.application.zimplyshop.utils.fadingActionBar.ParallaxRootLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/parallax_header_container" />

    <com.application.zimplyshop.utils.fadingActionBar.ObservableScrollView
        android:id="@+id/parallax_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/parallax_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="false"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/parallax_content_top_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>
        </LinearLayout>
    </com.application.zimplyshop.utils.fadingActionBar.ObservableScrollView>

</com.application.zimplyshop.utils.fadingActionBar.ParallaxRootLayout>