<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/product_card"
              android:background="@drawable/ic_card_bg"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small">
        <ImageView
            android:id="@+id/product_img_src"
            android:layout_width="@dimen/sub_cat_img_size"
            android:layout_height="@dimen/sub_cat_img_size"
            android:scaleType="centerCrop"/>
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_xlarge"
            android:text="Varghese chair"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toRightOf="@+id/product_img_src"/>
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_large"
            android:text="Rs 300"
            android:layout_below="@id/product_name"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toRightOf="@+id/product_img_src"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_mini"
        android:background="@color/booking_card_green_color"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1">
            <com.application.zimplyshop.widgets.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_xlarge"
                android:text="Booking Done"
                android:textColor="@color/white"/>
            <com.application.zimplyshop.widgets.CustomTextView
                android:id="@+id/visit_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/call_customer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="center"
                android:background="@drawable/action_bar_item_bg"
                android:src="@drawable/ic_phone_white"/>
                <com.application.zimplyshop.widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Store"
                    android:textSize="@dimen/font_mini"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_mini"
                android:layout_marginBottom="@dimen/margin_mini"
                android:layout_marginLeft="@dimen/margin_mini"
                android:layout_marginRight="@dimen/margin_mini"
                android:background="@color/white"></View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/get_direction_customer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="center"
                android:background="@drawable/action_bar_item_bg"
                android:src="@drawable/ic_location_white"/>
                <com.application.zimplyshop.widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Direction"
                    android:textSize="@dimen/font_mini"
                    android:textColor="@color/white"/>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>