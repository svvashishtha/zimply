<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/dropshadowcard"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_small">

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/item_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/heading_text_color"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:text="#Item1"/>
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/payment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="@dimen/margin_mini"
            android:background="@color/payment_pending_red_color"
            android:text="Payment Pending"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/margin_small"
                  android:orientation="horizontal">
        <ImageView
            android:id="@+id/product_img"
            android:layout_width="@dimen/pro_cover_img_height"
            android:layout_height="@dimen/pro_cover_img_height"
            android:scaleType="fitCenter"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingLeft="@dimen/margin_small"
                      android:paddingRight="@dimen/margin_small"
                      android:orientation="vertical">
            <com.application.zimplyshop.widgets.CustomTextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:textColor="@color/text_color1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_medium"
                android:text="#Item1"/>
            <com.application.zimplyshop.widgets.CustomTextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_mini"
                android:text="Rs 350"
                android:textColor="@color/zdhl5"
                android:textSize="@dimen/font_small" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <com.application.zimplyshop.widgets.CustomTextViewBold
                    android:id="@+id/product_disounted_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/margin_small"
                    android:text="Rs 350"
                    android:textColor="@color/heading_text_color"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold" />
                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/product_disounted_factor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_mini"
                    android:layout_below="@id/price_layout"
                    android:layout_toRightOf="@id/product_img"
                    android:paddingRight="@dimen/margin_small"
                    android:text="( 20% )"
                    android:textColor="@color/btn_green_color_normal"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

            <com.application.zimplyshop.widgets.CustomTextView
                android:id="@+id/product_qty"
                android:layout_width="wrap_content"
                android:textColor="@color/text_color1"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_medium"
                android:text="#Item1"/>


        </LinearLayout>


    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:layout_marginTop="@dimen/margin_small"
          android:background="@color/separator_color"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:id="@+id/delivery_address_layout"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/margin_small"
                  android:orientation="vertical">
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/delivery_address"
            android:layout_width="wrap_content"
            android:textColor="@color/heading_text_color"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:text="To Pay"/>
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/delivery_time"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:layout_marginTop="@dimen/margin_small"
            android:text="To Pay"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:layout_marginTop="@dimen/margin_small"
          android:background="@color/separator_color"></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_small">
        <com.application.zimplyshop.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:textColor="@color/heading_text_color"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:text="Total"/>

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/total_value"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:text="To Pay"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shipping_layout"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_small">
        <com.application.zimplyshop.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:textColor="@color/heading_text_color"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:text="Shipping Charge"/>

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/shipping_value"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:text="To Pay"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/discount_layout"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_small">
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:textColor="@color/heading_text_color"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:text="Discount"/>

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/discount_value"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:text="To Pay"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_small">

        <com.application.zimplyshop.widgets.CustomTextViewBold
            android:id="@+id/to_pay"
            android:layout_width="wrap_content"
            android:textColor="@color/heading_text_color"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:text="To Pay"/>
        <com.application.zimplyshop.widgets.CustomTextViewBold
            android:id="@+id/pay_at_store"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_mini"
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_below="@id/to_pay"
            android:text="*Pay at Zimply store in cash"/>
        <com.application.zimplyshop.widgets.CustomTextViewBold
            android:id="@+id/pay_amount"
            android:layout_width="wrap_content"
            android:textColor="@color/orange_button"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:text="To Pay"/>
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/separator_color"></View>
    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/z_item_height_48"
        android:layout_alignParentBottom="true"

        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/call_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/z_item_height_48"
            android:gravity="center"
            android:background="@drawable/book_btn_bg"
            android:paddingLeft="@dimen/margin_mini"
            android:paddingRight="@dimen/margin_mini"
            android:orientation="vertical">

            <com.application.zimplyshop.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Store"
                android:textSize="@dimen/font_small"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_phone_white"
                android:drawablePadding="@dimen/margin_small"
                android:textColor="@color/white"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"></View>
        <LinearLayout
            android:id="@+id/direction_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/z_item_height_48"
            android:gravity="center"
            android:background="@drawable/book_btn_bg"
            android:paddingLeft="@dimen/margin_mini"
            android:paddingRight="@dimen/margin_mini">

            <com.application.zimplyshop.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Direction"
                android:textSize="@dimen/font_small"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/margin_small"
                android:drawableLeft="@drawable/ic_location_white"

                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
