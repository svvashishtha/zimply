<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/dropshadowcard"
              android:orientation="vertical"
    >
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <com.application.zimplyshop.widgets.CustomTextViewBold
            android:id="@+id/item_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small"
            android:text="Granite Cheese Platter"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/font_small" />
        <ImageView
            android:id="@+id/buy_offline_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:src="@drawable/ic_zi_experience"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/product_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:scaleType="fitCenter"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small">
            <com.application.zimplyshop.widgets.CustomTextViewBold
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Granite Cheese Platter"
                android:textColor="@color/heading_text_color"
                android:textSize="@dimen/font_large" />
            <com.application.zimplyshop.widgets.CustomTextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_mini"
                android:text="Rs 350"
                android:textColor="@color/zdhl5"
                android:textSize="@dimen/font_small" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">

                <com.application.zimplyshop.widgets.CustomTextViewBold
                    android:id="@+id/product_disounted_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/margin_small"
                    android:text="Rs 350"
                    android:textColor="@color/heading_text_color"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold" />
                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/product_disounted_factor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_mini"
                    android:layout_below="@id/price_layout"
                    android:layout_toRightOf="@id/product_img"
                    android:paddingRight="@dimen/margin_small"
                    android:text="( 20% )"
                    android:textColor="@color/btn_green_color_normal"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

            <com.application.zimplyshop.widgets.CustomTextView
                android:id="@+id/expected_delivery_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_name"
                android:layout_marginTop="@dimen/margin_mini"
                android:text="@string/expected_delivery_date"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/font_small"
                android:visibility="gone" />

            <com.application.zimplyshop.widgets.CustomTextView
                android:id="@+id/expected_delivery_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_name"
                android:layout_marginTop="@dimen/margin_mini"
                android:layout_toEndOf="@id/expected_delivery_date"
                android:layout_toRightOf="@id/expected_delivery_date"
                android:text="25 Aug 2016"
                android:textColor="@color/zhl_darkest"
                android:textSize="@dimen/font_mini"
                android:visibility="gone" />
            <LinearLayout
                android:id="@+id/quantity_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_mini"
                android:paddingTop="@dimen/margin_mini">

                <com.application.zimplyshop.widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingRight="@dimen/margin_mini"
                    android:paddingLeft="@dimen/margin_mini"
                    android:text="Quantity"
                    android:textColor="@color/zhl_darkest"
                    android:textSize="@dimen/font_small" />

                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/cart_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/header_item_size"
                    android:minWidth="@dimen/header_item_size"
                    android:layout_gravity="center"
                    android:background="@drawable/white_card_rectangle"
                    android:gravity="center"
                    android:padding="@dimen/margin_small"
                    android:text="0"
                    android:textColor="@color/blue_button"
                    android:textSize="@dimen/font_medium" />




                <!--<LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_up_black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_down_black" />
                </LinearLayout>-->
                <!--<ImageButton
                    android:id="@+id/cart_positive"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:background="@null"
                    android:src="@drawable/plus" />-->
            </LinearLayout>
            <!-- <CustomTextView
                 android:textColor="@color/green_text_color"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/total_price"
                 android:text="\u20B9 2934"
                 android:textSize="@dimen/font_xlarge"
                 android:layout_marginRight="@dimen/margin_large"
                 android:layout_marginBottom="@dimen/margin_large"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentBottom="true"
                 />-->

        </LinearLayout>

        <ImageView
            android:id="@+id/cancel_cart_item"
            android:layout_width="@dimen/z_item_height_48"
            android:layout_height="@dimen/z_item_height_48"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@drawable/ic_cross" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator_color"></View>
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_small"
        android:background="@color/light_grey">
        <LinearLayout
            android:id="@+id/price_desc_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small">
                <com.application.zimplyshop.widgets.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subtotal"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/font_medium" />

                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/subtotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="10000"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/font_medium" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/applied_coupon_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small">
                <com.application.zimplyshop.widgets.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Discount"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/font_medium" />

                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="6.99"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small">
                <com.application.zimplyshop.widgets.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shipping Charges"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/font_medium" />

                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/shipping_charges"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="6.99"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small">
                <com.application.zimplyshop.widgets.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/font_medium" />

                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/total_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="6.99"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>
            <com.application.zimplyshop.widgets.CustomTextView
                android:id="@+id/hide_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hide Details"
                android:layout_gravity="right"
                android:textColor="@color/blue_button"
                android:padding="@dimen/margin_small"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/short_payment_desc_layout"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small">
                <com.application.zimplyshop.widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:layout_marginRight="@dimen/margin_small"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/font_medium" />

                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/short_subtotal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="10000"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/font_medium" />
                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/view_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    android:layout_gravity="right"
                    android:textColor="@color/blue_button"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator_color"></View>
    <com.application.zimplyshop.widgets.CustomTextView
        android:id="@+id/is_coc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small"
        android:paddingTop="@dimen/margin_small"
        android:textColor="@color/text_color1"
        android:gravity="center_vertical"
        android:textSize="@dimen/font_medium" />

    <View
        android:id="@+id/btn_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator_color"></View>
    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/z_item_height_48"
        android:orientation="horizontal">
        <LinearLayout android:layout_width="0dp"
                      android:id="@+id/remove_item"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:background="@drawable/action_bar_item_bg"
                      android:gravity="center">
            <com.application.zimplyshop.widgets.CustomTextView
                android:drawableLeft="@drawable/ic_bin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove item"
                android:drawablePadding="@dimen/margin_small"
                android:textColor="@color/text_color1"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>
        <View
            android:id="@+id/separator"
            android:layout_width="1dp" android:layout_height="match_parent"
              android:background="@color/separator_color"></View>
        <LinearLayout android:layout_width="0dp"
                      android:id="@+id/move_to_wishlist"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:background="@drawable/action_bar_item_bg"
                      android:layout_height="match_parent">
            <com.application.zimplyshop.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color1"
                android:drawableLeft="@drawable/ic_fav"
                android:gravity="center_vertical"
                android:text="Move To Wishlist"
                android:drawablePadding="@dimen/margin_small"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>