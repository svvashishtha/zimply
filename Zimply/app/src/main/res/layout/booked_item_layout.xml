<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/ic_card_bg"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/item_info_parent"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/product_img"
            android:layout_width="@dimen/pro_image_size"
            android:layout_height="@dimen/pro_image_size"
            android:src="@drawable/ic_launcher_icon_full"
            android:layout_margin="@dimen/margin_small"
            android:scaleType="centerCrop"/>
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sleepwell Sleepwell Sleepwell Sleepwell Sleepwell Sleepwell Sleepwell Sleepwell Sleepwell "
            android:layout_toRightOf="@id/product_img"
            android:layout_alignTop="@id/product_img"
            android:layout_marginRight="@dimen/margin_small"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/text_color1"/>

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:text="Rs. 300"
            android:layout_toRightOf="@+id/product_img"
            android:layout_marginRight="@dimen/margin_small"
            android:textColor="@color/text_color1"/>

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/booking_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_mini"
            android:text="Rs. 300"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/green_btn_bg"
            android:textColor="@color/white"/>

        <com.application.zimply.widgets.CustomTextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_below="@id/product_img"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Estimated Delivery"
            android:textStyle="bold"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/heading_text_color"/>

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_below="@id/store_name"
            android:text="Estimated Delivery"
            android:textSize="@dimen/font_small"
            android:textColor="@color/text_color1"/>

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/product_delivery_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_below="@id/store_address"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="Estimated Delivery"
            android:textColor="@color/text_color1"/>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_below="@id/product_delivery_date"
            android:background="@color/separator_color"/>
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/cancel_booking"
            android:layout_width="match_parent"
            android:layout_height="@dimen/z_item_height_48"
            android:text="Cancel"
            android:gravity="center"
            android:textSize="@dimen/font_large"
            android:textAllCaps="true"
            android:layout_below="@id/separator"
            />

    </RelativeLayout>
</LinearLayout>