<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/ic_card_bg"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/item_info_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/cancel_booking"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Cancel Booking"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:paddingBottom="@dimen/margin_small"
            android:background="@drawable/action_bar_item_bg"
            android:paddingTop="@dimen/margin_small"
            android:textColor="@color/red_text_color"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/product_img"
            android:layout_width="@dimen/pro_image_size"
            android:layout_height="@dimen/pro_image_size"
            android:src="@drawable/ic_launcher_icon_full"
            android:layout_margin="@dimen/margin_small"
            android:scaleType="centerCrop"/>
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/zi_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zi Store"
            android:layout_toRightOf="@id/product_img"
            android:layout_alignTop="@id/product_img"
            android:layout_marginRight="@dimen/margin_small"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/text_color1"/>

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zi_store_name"
            android:text="Rs. 300"
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_toRightOf="@+id/product_img"
            android:layout_marginRight="@dimen/margin_small"
            android:textColor="@color/text_color1"/>



<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/separator_color"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:layout_below="@id/product_img"
            android:paddingBottom="@dimen/margin_mini"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_img"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="Address"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_medium"
                    android:textColor="@color/heading_text_color"/>
                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/store_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_small"
                    android:text="Booking Done"
                    android:textColor="@color/heading_text_color"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/call_customer"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="center"
                        android:background="@drawable/action_bar_item_bg"
                        android:src="@drawable/ic_phone_white"/>
                    <com.application.zimplyshop.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Call Store"
                        android:textSize="@dimen/font_mini"
                        android:textColor="@color/textColor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/get_direction_customer"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="center"
                        android:background="@drawable/action_bar_item_bg"
                        android:src="@drawable/ic_location_white"/>
                    <com.application.zimplyshop.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Direction"
                        android:textSize="@dimen/font_mini"
                        android:textColor="@color/textColor"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>