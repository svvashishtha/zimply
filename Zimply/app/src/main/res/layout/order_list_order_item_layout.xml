<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/item_info_parent"
        android:layout_width="match_parent"
        android:padding="@dimen/margin_small"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/product_img"
            android:layout_width="@dimen/pro_image_size"
            android:layout_height="@dimen/pro_image_size"
            android:src="@drawable/ic_launcher_icon_full"
            android:layout_marginRight="@dimen/margin_small"
            android:scaleType="centerCrop"/>
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Sleepwell Sleepwell Sleepwell Sleepwell Sleepwell Sleepwell Sleepwell Sleepwell Sleepwell "
            android:layout_toRightOf="@id/product_img"
            android:layout_alignTop="@id/product_img"
            android:textColor="@color/text_color1"/>

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/product_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_toRightOf="@id/product_img"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Qty:2"
            android:textColor="@color/text_color1"/>

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:text="Rs. 300"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/product_qty"
            android:textColor="@color/text_color1"/>
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/product_delivery_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_qty"
            android:layout_toRightOf="@id/product_img"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Estimated Delivery"
            android:textColor="@color/text_color1"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/z_item_height_48"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="3">
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/product_status"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/font_mini"
            android:layout_marginLeft="@dimen/margin_small"
            android:padding="@dimen/margin_mini"
            android:text="Partial"
            android:textColor="@color/white"
            android:background="@drawable/greenbtn_bg"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/status_btn"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/font_medium"
            android:background="@drawable/grey_card_without_border"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator_color"></View>
</LinearLayout>