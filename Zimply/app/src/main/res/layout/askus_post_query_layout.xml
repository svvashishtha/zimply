<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:id="@+id/post_query_layout"
                  android:layout_height="wrap_content"
                  android:visibility="gone"
                  android:padding="@dimen/margin_small"
                  android:orientation="vertical">
        <com.application.zimplyshop.widgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/heading_text_color"
            android:text="@string/not_find_ans_text"
            android:textSize="@dimen/font_medium"/>

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/post_query_btn"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_height="@dimen/z_item_height_48"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/post_question_text"
            android:textAllCaps="true"
            android:background="@drawable/z_rate_blue_btn_bg"
            android:textSize="@dimen/font_medium"
            android:padding="@dimen/margin_small"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/question_post_success_layout"
        android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:orientation="vertical">
        <com.application.zimplyshop.widgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green_text_color"
            android:text="@string/question_posted_success_text"
            android:textSize="@dimen/font_small"
            android:padding="@dimen/margin_small"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@drawable/dropshadowcard"
                      android:layout_margin="@dimen/margin_small"
                      android:orientation="vertical">
            <com.application.zimplyshop.widgets.CustomTextViewBold
                android:id="@+id/question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/heading_text_color"
                android:textSize="@dimen/font_medium"
                android:padding="@dimen/margin_small"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="@dimen/z_item_height_48"
                          android:orientation="horizontal">
                <View android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"/>
                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/z_rate_btn_blue_color"
                    android:textSize="@dimen/font_medium"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:text="EDIT"
                    android:padding="@dimen/margin_small"/>
                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/delete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="DELETE"
                    android:gravity="center"
                    android:textColor="@color/red_text_color"
                    android:textSize="@dimen/font_medium"
                    android:padding="@dimen/margin_small"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>