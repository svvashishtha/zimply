<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homenew_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CoordinatorLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <android.support.design.widget.AppBarLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/app_primary_color">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_primary_color">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/abc_action_bar_default_height_material"
                        android:background="@color/white"
                        app:theme="@style/Toolbar_Theme" />

                    <com.application.zimplyshop.widgets.CustomTextView
                        android:id="@+id/cart_item_true"
                        android:layout_width="@dimen/cart_count_size_bg"
                        android:layout_height="@dimen/cart_count_size_bg"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/blue_circle_bg"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/cart_item_count_text" />
                    <com.application.zimplyshop.widgets.CustomTextView
                        android:id="@+id/notification_count"
                        android:layout_width="@dimen/cart_count_size_bg"
                        android:layout_height="@dimen/cart_count_size_bg"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/padding_top_56"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/red_circle_bg"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:textSize="@dimen/cart_item_count_text" />
                    <ImageView
                        android:id="@+id/filter_applied"
                        android:layout_width="@dimen/cart_count_size_bg"
                        android:layout_height="@dimen/cart_count_size_bg"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/padding_top_56"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/blue_circle_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_mini"
                        android:src="@drawable/ic_action_tick"
                        android:textColor="@color/white"
                        android:visibility="gone" />
                </FrameLayout>
            </android.support.design.widget.AppBarLayout>

            <!-- Helps handing the Fragments to load for each Tab -->
            <FrameLayout
                android:id="@+id/container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
                android:background="@color/pager_bg"/>

        </android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/drawer_header_layout" />

                <ListView
                    android:id="@+id/menu_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:childDivider="@null"
                    android:divider="@null"
                    android:groupIndicator="@null"></ListView>
            </LinearLayout>
        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>
    <FrameLayout
        android:id="@+id/notif_tut"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="fill_parent" >
    <com.application.zimplyshop.widgets.CustomTextView
        android:id="@+id/notification_tut"
        android:layout_width="@dimen/padding_top_136"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:text="New notifications and offers waiting for you."
        android:layout_marginRight="@dimen/margin_mini"
        android:layout_marginTop="@dimen/pro_image_size"
        android:background="@drawable/ic_filter_tut_bg"
        android:gravity="center"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_mini"
        android:paddingRight="@dimen/margin_mini"
        android:textColor="@color/white"
        android:textSize="@dimen/font_small" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <View
            android:id="@+id/fab_overlay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha="0"
            android:background="@color/black_trans_seventy"
            android:clickable="false" />
        <View
            android:id="@+id/hint_fab"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:background="@color/black_trans_seventy"
            android:clickable="true" />
        <include layout="@layout/fab" />
    </FrameLayout>

</RelativeLayout>