<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/address_snippet_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_mini"
        android:layout_marginRight="@dimen/margin_mini"
        android:background="@color/white">

        <com.application.zimplyshop.widgets.CustomTextViewBold
            android:id="@+id/delivery_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/margin_medium"
            android:text="Delivery Address"
            android:textSize="@dimen/font_large" />



        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delivery_address_text"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="@dimen/margin_small"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="fbskgbsdf" />

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_below="@id/address"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/margin_small"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/phone"
             />


        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_item_size"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/blue_button"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_medium"
            android:textSize="@dimen/font_small"
            android:paddingRight="@dimen/margin_medium"
            android:text="CHANGE"
            android:textColor="@color/white" />


    </RelativeLayout>
</LinearLayout>