<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/gridbuttonswitcher"
        android:layout_width="@dimen/z_item_height_48"
        android:layout_height="@dimen/z_item_height_48"
        android:layout_gravity="right"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/gridicon"
            android:layout_width="@dimen/margin_medium"
            android:layout_height="@dimen/margin_medium"
            android:src="@drawable/grid_icon" />
    </LinearLayout>

</LinearLayout>