<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:paddingLeft="@dimen/margin_small"
              android:paddingTop="@dimen/margin_small"
              android:paddingRight="@dimen/margin_small"
              android:background="@drawable/dropshadowcard"
              android:layout_height="match_parent">

    <com.application.zimplyshop.widgets.CustomTextViewBold
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/heading_text_color"
        android:text="@string/post_question_text"
        android:textSize="@dimen/font_medium"/>
    <com.application.zimplyshop.widgets.CustomTextView
        android:id="@+id/posted_by_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_mini"
        android:layout_marginLeft="@dimen/margin_medium"
        android:textColor="@color/text_color2"
        android:text="Posted By"
        android:textSize="@dimen/font_small"/>
    <com.application.zimplyshop.widgets.CustomTextView
        android:id="@+id/useful_count_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_mini"
        android:layout_marginBottom="@dimen/margin_mini"
        android:layout_marginLeft="@dimen/margin_medium"
        android:textColor="@color/text_color2"
        android:text="Posted By"
        android:textSize="@dimen/font_small"/>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/separator_color"></View>
    <com.application.zimplyshop.widgets.CustomTextView
        android:id="@+id/answer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_mini"
        android:textColor="@color/text_color2"
        android:text="Posted By"
        android:textSize="@dimen/font_medium"/>
    <com.application.zimplyshop.widgets.CustomTextView
        android:id="@+id/reply_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_mini"
        android:layout_marginBottom="@dimen/margin_mini"
        android:layout_marginLeft="@dimen/margin_medium"
        android:textColor="@color/text_color2"
        android:text="Posted By"
        android:textSize="@dimen/font_small"/>

    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/separator_color"></View>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/header_item_size"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/was_review_useful"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_medium"
            android:textColor="@color/text_color2"
            android:text="Posted By"
            android:textSize="@dimen/font_small"/>
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/reply_useful"
            android:layout_width="wrap_content"
            android:padding="@dimen/margin_small"
            android:layout_height="match_parent"
            android:textColor="@color/text_color2"
            android:text="YES"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_small"
            android:textAllCaps="true"
            android:textSize="@dimen/font_small"/>
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/reply_not_useful"
            android:layout_width="wrap_content"
            android:padding="@dimen/margin_small"
            android:layout_height="match_parent"
            android:textColor="@color/filter_item_text_selector"
            android:gravity="center"
            android:text="NO"
            android:textAllCaps="true"
            android:textSize="@dimen/font_small"/>
    </LinearLayout>
</LinearLayout>