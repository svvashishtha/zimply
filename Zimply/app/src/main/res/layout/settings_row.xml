<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/case1layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/size20">

                <com.application.zimplyshop.widgets.CustomTextViewBold
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"

                    android:text="@string/change_phone_number"
                    android:textColor="@color/zdhl5"
                    android:textSize="@dimen/size15" />

                <com.application.zimplyshop.widgets.CustomTextViewBold
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingTop="@dimen/margin_mini"
                    android:text="@string/change_phone_number"
                    android:textColor="@color/zdhl3"
                    android:textSize="@dimen/size18" />
            </LinearLayout>

            <ImageView
                android:id="@+id/edit_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_small"
                android:src="@drawable/edit" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/zhl_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/case2layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_midsmall">

            <com.application.zimplyshop.widgets.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/change_phone_number" />

            <com.application.zimplyshop.widgets.CustomTextView
                android:id="@+id/cancel_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@color/red_text_color"
                android:textSize="@dimen/font_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/z_item_height_48"
                android:layout_margin="@dimen/margin_midsmall">

                <com.application.zimplyshop.widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/square_border_light"
                    android:clickable="false"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_midsmall"
                    android:paddingRight="@dimen/margin_midsmall"
                    android:text="+91"
                    android:textColor="@color/z_grey_color"
                    android:textSize="@dimen/font_xlarge" />


                <com.application.zimplyshop.widgets.CustomEdittext
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_midsmall"
                    android:layout_marginRight="@dimen/margin_midsmall"
                    android:background="@drawable/blue_border_card_bg"
                    android:inputType="number"
                    android:paddingLeft="@dimen/margin_midsmall"
                    android:paddingRight="@dimen/margin_midsmall"
                    android:maxLength="10"
                    android:textSize="@dimen/font_xlarge"
                    android:textColor="@color/z_grey_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/z_item_height_48"
                android:layout_margin="@dimen/margin_midsmall"
                android:background="@drawable/z_blue_btn_without_rad_bg"
                android:gravity="center"
                android:orientation="vertical">

                <com.application.zimplyshop.widgets.CustomButton
                    android:id="@+id/verify_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/z_item_height_48"
                    android:background="@drawable/z_blue_btn_without_rad_bg"
                    android:text="@string/verify"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_xlarge" />

                <ProgressBar
                    android:id="@+id/verify_number_progress"
                    style="?android:attr/progressBarStyleSmallInverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </LinearLayout>

            <com.application.zimplyshop.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_midsmall"
                android:paddingLeft="@dimen/margin_midsmall"
                android:text="@string/verify_phone_sms" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/zhl_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/case3layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_midsmall">

            <com.application.zimplyshop.widgets.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/change_phone_number" />

            <com.application.zimplyshop.widgets.CustomTextView
                android:id="@+id/cancel_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@color/red_text_color"
                android:textSize="@dimen/font_large" />
        </LinearLayout>

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_midsmall"
            android:lines="2"
            android:text="We have sent an OTP to the number. Please enter it below to verify." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_midsmall"
            android:layout_marginRight="@dimen/margin_midsmall"
            android:background="@drawable/square_border_dark">

            <com.application.zimplyshop.widgets.CustomEdittext
                android:id="@+id/otp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/z_item_height_48"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="@string/otp_name"
                android:paddingLeft="@dimen/margin_midsmall"
                android:paddingRight="@dimen/margin_midsmall"
                android:textColor="@color/z_grey_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.application.zimplyshop.widgets.CustomButton
                android:id="@+id/resend_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/z_item_height_48"
                android:layout_margin="@dimen/margin_midsmall"
                android:layout_weight="1"
                android:background="@drawable/z_blue_btn_without_rad_bg"
                android:text="@string/retry_in"
                android:textColor="@color/white"
                android:textSize="@dimen/font_xlarge" />

            <com.application.zimplyshop.widgets.CustomButton
                android:id="@+id/edit_number"
                android:layout_width="0dp"
                android:layout_height="@dimen/z_item_height_48"
                android:layout_margin="@dimen/margin_midsmall"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@drawable/gray_btn_bg"
                android:text="@string/edit_number"
                android:textColor="@color/white"
                android:textSize="@dimen/font_xlarge" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/zhl_dark" />
    </LinearLayout>
</FrameLayout>