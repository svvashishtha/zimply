<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pager_bg"
    android:orientation="vertical">

    <com.application.zimplyshop.widgets.CustomTextView
        android:id="@+id/add_new_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height48"
        android:background="@drawable/z_rate_blue_btn_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        android:drawableRight="@drawable/ic_plus_icon"
        android:text="Add new address"
        android:textColor="@color/white"
        android:textSize="@dimen/font_medium" />

    <com.application.zimplyshop.widgets.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_small"
        android:text="Choose address to deliver"
        android:textColor="@color/heading_text_color"
        android:textSize="@dimen/font_medium" />

</LinearLayout>
