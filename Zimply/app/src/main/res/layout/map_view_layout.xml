<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/parent"
    android:layout_height="match_parent"
    android:background="@color/white_card_selected_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/bottom_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="showDirections"
            android:padding="@dimen/size16"
            android:background="@drawable/whitebuttoncustomback"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/navigation_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/navigate" />

            <com.application.zimplyshop.widgets.CustomTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/take_me_there"
                android:textColor="@color/zimply_blue"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_toLeftOf="@id/navigation_img"
                android:textSize="@dimen/size14"
                />
        </RelativeLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/search_map"
            android:layout_width="fill_parent"
            android:layout_above="@+id/bottom_container"
            android:layout_height="fill_parent" />
    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@drawable/actionbar_bg"
        app:theme="@style/Toolbar_Theme" />

</FrameLayout>
