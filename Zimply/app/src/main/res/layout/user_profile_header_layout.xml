<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_profile_cover_img_height"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/user_pic_big"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <com.application.zimplyshop.widgets.CircularImageView
            android:id="@+id/user_pic"
            android:layout_width="@dimen/pro_image_size"
            android:layout_height="@dimen/pro_image_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_small"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_pic"
            app:border="false" />

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />

        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>
</FrameLayout>