<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="match_parent"
               android:background="@drawable/dropshadowcard"
               android:padding="@dimen/margin_small"
               android:orientation="vertical"
               android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/coupon_desc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.application.zimplyshop.widgets.CustomEdittext
            android:id="@+id/coupon_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Coupon code"
            style="@style/EditTextAppTheme"
            android:inputType="textCapCharacters"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_small"
            android:textColorHint="@color/zdhl5"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/font_medium" />
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/coupon_apply"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_item_size"
            android:background="@drawable/white_card_rectangle"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:text="Apply"
            android:textColor="@color/heading_text_color"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>
    <com.application.zimplyshop.widgets.CustomTextView
        android:id="@+id/coupon_code_apply_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="Coupon code applied successfully"
        android:paddingTop="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/button_green"
        android:layout_gravity="center_vertical"/>
</LinearLayout>

