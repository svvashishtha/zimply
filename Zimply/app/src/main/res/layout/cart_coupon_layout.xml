<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:background="@drawable/dropshadowcard"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/apply_coupon_header"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="@dimen/margin_small">
        <com.application.zimplyshop.widgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Coupon"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_down_black"
            android:layout_marginRight="@dimen/margin_small"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/font_medium" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/coupon_desc_layout"
        android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/margin_small"
                      android:orientation="horizontal">
            <com.application.zimplyshop.widgets.CustomEdittext
                android:id="@+id/coupon_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enter Coupon code"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_small"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/font_medium" />
            <com.application.zimplyshop.widgets.CustomTextView
                android:id="@+id/coupon_apply"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/header_item_size"
                android:background="@drawable/white_card_rectangle"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingRight="@dimen/margin_medium"
                android:text="Apply"
                android:textColor="@color/heading_text_color"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/available_coupons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RadioGroup>
    </LinearLayout>

</FrameLayout>