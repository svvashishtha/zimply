<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:orientation="horizontal"
    android:paddingTop="@dimen/margin_small"
    android:visibility="gone">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@drawable/ic_card_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cat_filter_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/whitebuttoncustomback"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_mini"
            android:paddingTop="@dimen/margin_mini">

            <ImageView
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:src="@drawable/ic_category1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size5">

                <com.application.zimplyshop.widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/categories_text"
                    android:textColor="@color/heading_text_color"
                    android:textSize="@dimen/font_small" />

                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Home Decor"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/separator1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/separator_color" />

        <LinearLayout
            android:id="@+id/filter_filter_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/whitebuttoncustomback"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_mini"
            android:paddingTop="@dimen/margin_mini">

            <ImageView
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:src="@drawable/ic_filter1" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size5">

                <com.application.zimplyshop.widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filters_text"
                    android:textColor="@color/heading_text_color"
                    android:textSize="@dimen/font_small" />

                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/filter_filter_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="@dimen/margin_mini"
                    android:singleLine="true"
                    android:text="Home Decor"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/separator2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/separator_color" />

        <LinearLayout
            android:id="@+id/sort_filter_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/whitebuttoncustomback"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_mini"
            android:paddingTop="@dimen/margin_mini">

            <ImageView
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:src="@drawable/ic_sort1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size5">

                <com.application.zimplyshop.widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_by_text"
                    android:textColor="@color/heading_text_color"
                    android:textSize="@dimen/font_small" />

                <com.application.zimplyshop.widgets.CustomTextView
                    android:id="@+id/sortby_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Home Decor"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>