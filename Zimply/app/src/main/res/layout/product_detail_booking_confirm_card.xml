<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/dropshadowcard"
              android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small">
        <ImageView
            android:id="@+id/close_card"
            android:layout_width="@dimen/z_item_height_48"
            android:layout_height="@dimen/z_item_height_48"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="center"
            android:background="@drawable/action_bar_item_bg"
            android:src="@drawable/ic_cross"
            />
        <com.application.zimplyshop.widgets.CustomTextViewBold
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_large"
            android:text="Address"
            android:layout_toLeftOf="@id/close_card"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toRightOf="@+id/product_img_src"/>
        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/close_card"
            android:textSize="@dimen/font_large"
            android:text="Rs 300"
            android:layout_below="@id/product_name"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toRightOf="@+id/product_img_src"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/call_customer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/z_item_height_48"
            android:gravity="center"
            android:background="@drawable/book_btn_bg"
            android:paddingLeft="@dimen/margin_mini"
            android:paddingRight="@dimen/margin_mini"
            android:orientation="vertical">

            <com.application.zimplyshop.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Store"
                android:textSize="@dimen/font_small"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_phone_white"
                android:drawablePadding="@dimen/margin_small"
                android:textColor="@color/white"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@color/white"></View>
        <LinearLayout
            android:id="@+id/get_direction_customer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/z_item_height_48"
            android:gravity="center"
            android:background="@drawable/book_btn_bg"
            android:paddingLeft="@dimen/margin_mini"
            android:paddingRight="@dimen/margin_mini">

            <com.application.zimplyshop.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Direction"
                android:textSize="@dimen/font_small"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/margin_small"
                android:drawableLeft="@drawable/ic_location_white"

                android:textColor="@color/white"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
