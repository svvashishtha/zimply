<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.application.zimplyshop.activities.EditAddressActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="?attr/actionBarSize"
        android:background="@color/white"
        android:clickable="true"
        android:clipToPadding="false"
        android:padding="@dimen/margin_small"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:clipToPadding="false"

            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small">

                <com.application.zimplyshop.widgets.CustomEdittext
                    android:id="@+id/phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_phone"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="@dimen/size12"
                    android:singleLine="true"
                    android:textColor="@color/text_color1"
                    android:textColorHint="@color/zhl_darkest"
                    android:textSize="@dimen/font_medium" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small">

                <com.application.zimplyshop.widgets.CustomEdittext
                    android:id="@+id/email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_mail"
                    android:inputType="textEmailAddress|textAutoComplete"
                    android:maxLines="1"
                    android:padding="@dimen/size12"
                    android:singleLine="true"
                    android:textColor="@color/text_color1"
                    android:textColorHint="@color/zhl_darkest"
                    android:textSize="@dimen/font_medium" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small">

                <com.application.zimplyshop.widgets.CustomEdittext
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:hint="@string/enter_name"
                    android:inputType="textPersonName|textAutoCorrect"
                    android:maxLines="1"
                    android:padding="@dimen/size12"
                    android:singleLine="true"
                    android:textColor="@color/text_color1"
                    android:textColorHint="@color/zhl_darkest"
                    android:textSize="@dimen/font_medium" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small">

                <com.application.zimplyshop.widgets.CustomEdittext
                    android:id="@+id/address_line1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|top"
                    android:hint="@string/address_line1"
                    android:inputType="textPostalAddress|textAutoCorrect"
                    android:lines="2"
                    android:padding="@dimen/size12"
                    android:textColor="@color/text_color1"
                    android:textColorHint="@color/zhl_darkest"
                    android:textSize="@dimen/font_medium" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small">

                <com.application.zimplyshop.widgets.CustomEdittext
                    android:id="@+id/address_line2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|top"
                    android:hint="@string/address_line2"
                    android:inputType="textPostalAddress|textAutoCorrect"
                    android:lines="2"
                    android:padding="@dimen/size12"
                    android:textColor="@color/text_color1"
                    android:textColorHint="@color/zhl_darkest"
                    android:textSize="@dimen/font_medium" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small">

                <com.application.zimplyshop.widgets.CustomEdittext
                    android:id="@+id/pincode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pin_code_et_hint"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:padding="@dimen/size12"
                    android:singleLine="true"
                    android:textColor="@color/text_color1"
                    android:textColorHint="@color/zhl_darkest"
                    android:textSize="@dimen/font_medium" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small">

                    <com.application.zimplyshop.widgets.CustomEdittext
                        android:id="@+id/city"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_city"
                        android:inputType="textAutoCorrect"
                        android:maxLines="1"
                        android:padding="@dimen/size12"
                        android:singleLine="true"
                        android:textColor="@color/text_color1"
                        android:textColorHint="@color/zhl_darkest"
                        android:textSize="@dimen/font_medium" />
                </android.support.design.widget.TextInputLayout>

                <ListView
                    android:id="@+id/city_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"></ListView>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small">

                <com.application.zimplyshop.widgets.CustomEdittext
                    android:id="@+id/state"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_state"
                    android:inputType="textAutoCorrect"
                    android:maxLines="1"
                    android:padding="@dimen/size12"
                    android:singleLine="true"
                    android:textColor="@color/text_color1"
                    android:textColorHint="@color/zhl_darkest"
                    android:textSize="@dimen/font_medium" />
            </android.support.design.widget.TextInputLayout>


            <com.application.zimplyshop.widgets.CustomTextView
                android:id="@+id/is_available_pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingRight="@dimen/margin_medium"
                android:textColor="@color/red_text_color"
                android:textSize="@dimen/font_small"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:background="@drawable/actionbar_bg" />

    <LinearLayout
        android:id="@+id/save_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/size10"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:clickable="true">


        <com.application.zimplyshop.widgets.CustomTextView
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/greenbtn_bg"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/size12"
            android:singleLine="true"
            android:text="@string/save_address"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/size18" />

    </LinearLayout>
    <include layout="@layout/progress_layout" />
</FrameLayout>
