<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/z_feed_item_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/z_margin_small"
        android:paddingRight="@dimen/z_margin_small"
        android:paddingTop="@dimen/z_margin_small"
        android:text="Liked Zimply?"
        android:textColor="@color/heading_text_color"
        android:textSize="@dimen/font_medium"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/z_margin_small"
        android:paddingRight="@dimen/z_margin_small"
        android:paddingTop="@dimen/z_margin_mini"
        android:text="Rate your experience"
        android:textColor="@color/text_color1"
        android:textSize="@dimen/font_small" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/z_margin_small"
        android:layout_marginTop="@dimen/z_margin_medium"
        android:scaleType="center"
        android:src="@drawable/ic_rate_heart" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/z_margin_small"
        android:gravity="center"
        android:paddingLeft="@dimen/z_margin_small"
        android:paddingRight="@dimen/z_margin_small"
        android:paddingTop="@dimen/z_margin_mini"
        android:text="Zimply is committed to make your home beautiful"
        android:textColor="@color/text_color1"
        android:textSize="@dimen/font_small" />

    <ImageView
        android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/z_margin_small"
        android:layout_marginTop="@dimen/z_margin_medium"
        android:scaleType="center"
        android:src="@drawable/ic_stars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/z_margin_medium" >

        <Button
            android:id="@+id/hate_it_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/z_rate_white_btn_bg"
            android:text="Hate it"
            android:textAllCaps="false"
            android:textColor="@color/z_grey_color" />

        <View
            android:layout_width="@dimen/z_margin_medium"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/liked_it"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/z_rate_blue_btn_bg"
            android:text="Rate 5 "
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="@dimen/z_margin_medium"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/neutral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/z_rate_white_btn_bg"
            android:text="Later"
            android:textAllCaps="false"
            android:textColor="@color/z_grey_color" />
    </LinearLayout>

</LinearLayout>